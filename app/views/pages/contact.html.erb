  <div class="row justify-content-center">
    <div class="col-md-5 col-sm-12 col-lg-4 col-xl-4 text-center py-5 padding-5-l-r">
      <div class="text-center background-color-cases px-3 py-2 box-shadow-two-black h-100">
        <div class="row my-4">
          <div class="col-md-12">
            <div class="float-left card-img-top">
              <%= image_tag "maps.png", style: "width: 70px; height: 70px;" %>
            </div>
          </div>
        </div>
        <h4 class="text-color-charleston-green font-weight-500 mb-3 mt-4">Nos adresses</h4>
        <a href="https://www.google.com/maps/place/19+Place+de+la+R%C3%A9publique,+75003+Paris/data=!4m2!3m1!1s0x47e66e08cc9338b9:0xc395e631709625bc?sa=X&ved=2ahUKEwi108yclqXjAhVQA2MBHc1xAx8Q8gEwAHoECAoQAQ" target="_blank"><h5 class="text-color-outer-space font-weight-100 my-3"><u>19 place de la République, 75003, Paris</u></h5></a>
        <a href="https://www.google.com/maps/place/73+Quai+d'Orsay,+75007+Paris/@48.862133,2.3029852,17z/data=!3m1!4b1!4m5!3m4!1s0x47e66fdc026ff1e1:0x1ff21478fa7ce1e2!8m2!3d48.8621295!4d2.3051739" target="_blank"><h5 class="text-color-outer-space font-weight-100 mt-3 mb-4"><u>73 quai d'Orsay, 75007, Paris</u></h5></a>
      </div>
    </div>
    <div class="col-md-5 col-sm-12 col-lg-4 col-xl-4 text-center py-5 padding-5-l-r">
      <div class="text-center background-color-cases px-3 py-2 box-shadow-two-black h-100">
        <div class="row my-4">
          <div class="col-md-12">
            <div class="float-left card-img-top">
              <%= image_tag "telephone.png", style: "width: 70px; height: 70px;" %>
            </div>
          </div>
        </div>
        <h4 class="text-color-charleston-green font-weight-500 mb-3 mt-4">Nous contacter</h4>
        <h5 class="my-3"><%= link_to "courriers@glf.eu", "mailto:courriers@glf.eu", class: "mb-0 text-color-outer-space font-weight-100" %></h5>
        <h5 class="text-color-outer-space font-weight-100 mt-3 mb-4">01 44 18 18 18</h5>
      </div>
    </div>
  </div>
</div>

<div class="padding-5-l-r-m-5-l-r pt-5 min-height-65vh" style="background-image: url('<%= image_path "republique.png" %>'); background-size: cover; background-position: center;">
  <%= render "messages/contact_form", mail: @mail, titre: @titre %>
</div>

