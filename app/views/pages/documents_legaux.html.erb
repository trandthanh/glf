<div style="height: 13vh;"></div>

<!-- div verte avec titre et tagline principale -->

<div class="mt-5 background-color-ghost-white text-center padding-5-t-b">
  <h1 class="text-color-charleston-green pt-5 pb-4 font-weight-400">Documents légaux</h1>
</div>


<div class="row p-5 text-center">
  <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12"></div>
  <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 mb-2">
    <%= link_to asset_path('CEGC-attestation-de-garantie-gestion-2020.pdf') do %>
    <div class="p-3 text-center background-color-warm-black text-white h-100 vertical-align-center">
      CEGC attestation de garantie gestion 2020
    </div>
    <% end %>
  </div>
  <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 mb-2">
    <%= link_to asset_path('CEGC-attestation-de-garantie-syndic-2020.pdf') do %>
    <div class="p-3 text-center background-color-warm-black text-white h-100 vertical-align-center">
      CEGC attestation de garantie syndic 2020
    </div>
    <% end %>
  </div>
  <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12"></div>
  <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12"></div>
  <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 mb-2">
    <%= link_to asset_path('GLF-LOICK-FOUCHET-attestation-RCP-2020.pdf') do %>
    <div class="p-3 text-center background-color-warm-black text-white h-100 vertical-align-center">
      GLF LOICK FOUCHET attestation RCP 2020
    </div>
    <% end %>
  </div>
  <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 mb-2">
    <%= link_to asset_path('GLF-LOICK-FOUCHET-carte-professionnelle-2019-a-2022.pdf') do %>
    <div class="p-3 text-center background-color-warm-black text-white h-100 vertical-align-center">
      GLF LOICK FOUCHET carte professionnelle 2019 à 2020
    </div>
    <% end %>
  </div>
  <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12"></div>
</div>

<div class="padding-5-l-r-m-5-l-r pt-5 min-height-65vh" style="background-image: url('<%= image_path "republique.png" %>'); background-size: cover; background-position: center;">
  <%= render "messages/contact_form", mail: @mail, titre: @titre %>
</div>


