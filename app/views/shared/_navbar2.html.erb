  <!-- Button to close the overlay navigation -->
  <div class="close text-color-white pr-4 pt-4"><i class="fas fa-times"></i></div>

  <!-- Overlay content -->
  <div class="overlay-content d-flex flex-column align-items-center">

    <div class="mb-2">
      <h2 class="text-color-white">Les services</h2>
      <%= link_to services_gestion_locative_path do %>
        <h4 class="text-color-white m-0">Gestion locative</h4>
      <% end %>
      <%= link_to services_devenir_locataire_path do %>
        <h4 class="text-color-white m-0">Devenir locataire</h4>
      <% end %>
      <%= link_to services_vendre_path do %>
        <h4 class="text-color-white m-0">Vendre</h4>
      <% end %>
      <%= link_to services_acheter_path do %>
        <h4 class="text-color-white m-0">Acheter</h4>
      <% end %>
    </div>

    <div>
      <h2 class="text-color-white ">L'entreprise</h2>
      <%= link_to a_propos_path do %>
        <h4 class="text-color-white m-0">Qui sommes-nous?</h4>
      <% end %>
      <%= link_to contact_path do %>
        <h4 class="text-color-white m-0">Contact</h4>
      <% end %>
      <%= link_to recrutement_path do %>
        <h4 class="text-color-white m-0">Recrutement</h4>
      <% end %>
      <a href="https://www.orchestrav2.egiweb.net" target="blank"><h4 class="text-color-white m-0">Extranet</h4></a>
    </div>
  </div>

</div>

